<?xml version="1.0"?>
<root>
	<appdef>
		<appname>SLACK</appname>
		<equal>com.tinyspeck.slackmacgap</equal>
	</appdef>
	<appdef>
		<appname>CHROME</appname>
		<equal>com.google.Chrome</equal>
	</appdef>
	<appdef>
		<appname>CHROMIUM</appname>
		<equal>org.chromium.Chromium</equal>
	</appdef>
	<appdef>
		<appname>ITERM</appname>
		<equal>com.googlecode.iterm2</equal>
	</appdef>
	<item>
		<name>Control w-right to option delete</name>
		<identifier>private.control_w_to_option_delete</identifier>
		<only>CHROME, CHROMIUM, SLACK</only>
		<autogen>__KeyToKey__
			KeyCode::W, ModifierFlag::CONTROL_R,
			KeyCode::DELETE, ModifierFlag::OPTION_L
		</autogen>
	</item>
	<item>
		<name>Application to control-r</name>
		<identifier>private.application_to_control_r</identifier>
		<autogen>__KeyToKey__
			KeyCode::PC_APPLICATION,
			KeyCode::CONTROL_R
		</autogen>
	</item>
	<item>
		<name>Control j to enter</name>
		<identifier>private.control_j_to_enter</identifier>
		<only>CHROMIUM, SLACK</only>
		<autogen>__KeyToKey__
			KeyCode::J, ModifierFlag::CONTROL_L,
			KeyCode::ENTER
		</autogen>
	</item>
	<item>
		<name>Control u to delete line</name>
		<identifier>private.command_u_to_delete_line</identifier>
		<autogen>__KeyToKey__
			KeyCode::U, ModifierFlag::CONTROL_L,
			KeyCode::DELETE, ModifierFlag::COMMAND_L
		</autogen>
	</item>
	<item>
		<name>Control p to up arrow</name>
		<identifier>private.control_p_to_up_arrow</identifier>
		<autogen>__KeyToKey__
			KeyCode::P, ModifierFlag::CONTROL_L,
			KeyCode::CURSOR_UP
		</autogen>
	</item>
	<item>
		<name>Control f to right arrow</name>
		<identifier>private.control_f_to_right_arrow</identifier>
		<autogen>__KeyToKey__
			KeyCode::F, ModifierFlag::CONTROL_R,
			KeyCode::CURSOR_RIGHT
		</autogen>
	</item>
	<item>
		<name>Control v to move right</name>
		<identifier>private.control_v_to_move_right</identifier>
		<autogen>__KeyToKey__
			KeyCode::V, ModifierFlag::CONTROL_R,
			KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L
		</autogen>
	</item>
	<item>
		<name>Control s to autocomplete</name>
		<identifier>private.control_s_to_autocomplete</identifier>
		<autogen>__KeyToKey__
			KeyCode::S, ModifierFlag::CONTROL_R,
			KeyCode::CURSOR_RIGHT,
			KeyCode::CURSOR_DOWN,
			KeyCode::ENTER
		</autogen>
	</item>
	<item>
		<name>Control q to move left</name>
		<identifier>private.control_q_to_move_left</identifier>
		<autogen>__KeyToKey__
			KeyCode::Q, ModifierFlag::CONTROL_R,
			KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L
		</autogen>
	</item>
	<item>
		<name>Semicolon to enter</name>
		<identifier>private.semicolon_to_enter</identifier>
		<autogen>__KeyToKey__
			KeyCode::SEMICOLON, ModifierFlag::NONE,
			KeyCode::ENTER
		</autogen>
	</item>
</root>
